<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mysite.boardMapper"> <!-- 패키지명을 적는 것이 관례 -->
	<insert id="write" parameterType="Board"> <!-- mybatis-config.xml에서 만든 별명 -->
		INSERT INTO simpleBoard(bNo, bTitle, bWriter, bContent)
		VALUES(seq_bno.nextVal, #{bTitle}, #{bWriter}, #{bContent})
	</insert>
	
	<!-- INSERT 어떻게 호출할까? 
	BoardDaoImpl에 write메서드에서 mybatis mapper를 불러야한다.-->
</mapper>